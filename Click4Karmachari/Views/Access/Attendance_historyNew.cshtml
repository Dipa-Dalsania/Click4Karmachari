@using ClickKarmachari;
@{
    ViewBag.Title = "Attendance_history";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<GetUserPunchDetails_Result> punchDetails = ViewBag.Punchs;

}


<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">Attendance History</h4>
    </div>
</div>
<!--End Page header-->
<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                    <div class="d-flex justify-content-end mb-2">
                        <a href="~/Access/ExportUserPunchToCsv?User_Id=@ViewBag.User_Id&Year=@ViewBag.Year&Month=@ViewBag.Month" class="btn btn-info d-flex align-items-center">
                            <i class="fa fa-download"></i> <span class="ms-2">Download UserPunch</span>
                        </a>
                    </div>
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Attendance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (punchDetails != null)
                            {
                                foreach (GetUserPunchDetails_Result _at in punchDetails)
                                {
                                    <tr>
                                        <td>@_at.PunchDate.ToString("dd MMMM yyyy")</td>
                                        <td>@_at.Detail</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>


                </div>

            </div>
        </div>
    </div>