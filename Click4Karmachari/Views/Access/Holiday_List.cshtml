@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    UserMaster _LogedUser = ViewBag._LogedUser;
    CommonClasses util = new CommonClasses();
    ViewBag.Title = "Holiday_List";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<Holiday_Master> holiday = ViewBag.holiday;
    DateTime Date = Convert.ToDateTime(DateTime.Now);
    string str1 = Date.ToString("dd MMMM yyyy");
    int m = Date.Month;
    int y = Date.Year;
    int cnt = 1;
}
<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">Holidays</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="d-flex align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button href="#" class="btn btn-primary mr-3" onclick="return Add_Holiday(0,'','')" type="submit"><strong><i class="feather feather-plus fs-15 my-auto mr-2"></i>Add Holiday</strong></button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->

<!-- Row -->
<div class="row">
    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title">@*Holidays Lists*@</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                @*<th class="border-bottom-0 w-5">No</th>*@
                                <th class="border-bottom-0 w-5">Day</th>
                                <th class="border-bottom-0">Date</th>
                                <th class="border-bottom-0">Holidays</th>
                                <th class="border-bottom-0">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (holiday != null)
                            {
                                foreach (Holiday_Master _newobj in holiday)
                                {

                                    <tr>
                                        @*<td>@cnt</td>*@
                                        <td style="text-transform: capitalize">@_newobj.Holiday_Date.Value.DayOfWeek</td>
                                        <td>@_newobj.Holiday_Date.Value.ToString("dd MMMM yyyy")</td>
                                        <td style="text-transform: capitalize">@_newobj.Holiday_Name</td>
                                        <td class="holiday-list">
                                            @using (Ajax.BeginForm("Holiday_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateHoliday" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                            {
                                                <input type="hidden" name="holiday_id" id="holiday_id" value="@_newobj.Holiday_Id" />
                                                <button class="btn btn-icon btn-primary" onclick="return Add_Holiday(@_newobj.Holiday_Id,'@_newobj.Holiday_Name','@_newobj.Holiday_Date.Value.ToString("dd MMMM yyyy")')" type="submit"><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></button>
                                                <Button type="submit" id="deleteHoliday" name="Command" value="Delete" class="btn btn-danger btn-icon" data-toggle="tooltip" data-original-title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                            }
                                        </td>
                                    </tr>
                                    cnt++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="holiday-calender">
                    <div id="calendar1"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row-->

<!-- Holiday Modal -->
<div class="modal fade" id="Model_Add_Holiday" tabindex="-1" role="dialog" aria-hidden="true">

    @using (Ajax.BeginForm("Holiday_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateHoliday" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
    {
        <div class="modal-dialog">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Holidays</h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Holiday_Id" id="Holiday_Id" value="0" />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Select Date <span class="text-red">*</span></label> 
                                <input type="text" class="form-control fc-datepicker" name="Holiday_Date" autocomplete="off" id="Holiday_Date" data-single-mode="true" value="@str1" placeholder="01 January 2001" required />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Enter Occasion <span class="text-red">*</span></label>
                                <input type="text" name="Holiday_Name" id="Holiday_Name" class="form-control" placeholder="Enter Holiday" required autocomplete="off" >
                            </div>
                        </div>
                    </div>
                </div>
                        <div class="modal-footer modal-new-footer">
                            <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                            <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save</button>
                            <button type="submit" id="deletebtn" name="Command" value="Delete" class="btn btn-danger"><i class="feather feather-trash"></i>&ensp;Delete</button>
                        </div>
                    </div>

                </div>
    }
    </div>
<!-- Holiday Modal -->
