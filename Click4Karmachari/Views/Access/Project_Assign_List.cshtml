@using ClickKarmachari;
@{
    ViewBag.Title = "Project_Assign_List";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    UserMaster _LogedUser = ViewBag._LogedUser;
    Project_Master project = ViewBag.project;
    List<UserMaster> emp = ViewBag.emp;
    List<UserMaster> _notincdlued = new List<UserMaster>();
    foreach (UserMaster user in emp)
    {
        bool _found = false;
        foreach (Project_Assign_Master _usr in project.Project_Assign_Master)
        {
            if (user.User_ID == _usr.UserMaster.User_ID)
            {
                _found = true;
            }
        }
        if (_found == false)
        {
            _notincdlued.Add(user);
        }
    }
}

<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">All Project Assign</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="d-flex align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button class="btn btn-primary" onclick="return  Add_Project_Emp(@project.Project_Id,0,0,'')" type="submit"><i class="feather feather-plus fs-15 my-auto mr-2"></i><strong>Add Employee</strong></button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->
<!-- Row -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header  border-0">
               @* <h4 class="card-title">Project List</h4>*@
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>Project Name </th>
                                <th>Employee Name </th>
                                <th>Operation</th>
                        </thead>
                        @if (project.Project_Assign_Master != null || project.Project_Assign_Master.Count != 0)
                        {
                            foreach (Project_Assign_Master _newobj in project.Project_Assign_Master)
                            {
                                <tbody>
                                    <tr>
                                        <td  style="text-transform: capitalize">@_newobj.Project_Master.Project_Name</td>
                                        <td  style="text-transform: capitalize">@_newobj.UserMaster.User_Name</td>
                                        <td>
                                            @using (Ajax.BeginForm("Project_Emp_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminProjectE" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                            {
                                                <input type="hidden" name="Ass_ID" id="Ass_ID" value="@_newobj.Project_Assign_Id" />
                                                <input type="hidden" name="Proj_Id" id="Proj_Id" value="@_newobj.Project_Id" />
                                                <Button type="submit" id="deletebtn" name="Command" value="Delete" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row-->

<div class="modal fade" id="Model_Emp_Project" tabindex="-1" role="dialog" aria-hidden="true">

    @using (Ajax.BeginForm("Project_Emp_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminProjectE" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
    {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Employee</h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Assign_Id" id="Assign_Id" value="0" />
                    <input type="hidden" name="Project_Id" id="Project_Id" />
                    <div class="row">
                        <div class="col-lg-6" id="demo">
                            <div class="form-group">
                                <label class="form-label">Employee Name <span class="text-red">*</span></label>
                                <select name="Emp_Id" id="Emp_Id" class="form-control custom-select select2" data-placeholder="Select Employee" required>
                                    <option value="">Select Employee</option>
                                    @foreach (UserMaster _u in _notincdlued)
                                    {
                                        <option value=@_u.User_ID>@_u.User_Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6" id="demo1">
                            <div class="form-group">
                                <label class="form-label">Employee Name</label>
                                <input type="text" class="form-control custom-select select2" name="Emp_Name" id="Emp_Name" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                    <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save changes</button>
                </div>
            </div>

        </div>
    }
</div>
