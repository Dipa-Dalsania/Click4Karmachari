@using ClickKarmachari;
@using ClickKarmachari.Models;
@{
    ViewBag.Title = "AdvanceReq_List";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<Request_Master> Req = ViewBag.req;
    CommonClasses util = new CommonClasses();
    List<UserMaster> user = ViewBag.user;
    List<Project_Master> projects = ViewBag.Project;
    DateTime Date = Convert.ToDateTime(DateTime.Now);
    string str1 = Date.ToString("dd MMMM yyyy");
    List<long> pid = new List<long>();
}

<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">
            All Advance Request
        </h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button class="btn btn-primary" onclick="return Add_AdvanceReq(0,'','','','','','','',0,0,'@str1','@str1','',0)" type="submit"><i class="feather feather-plus fs-15 my-auto mr-2"></i><strong>Add Request</strong></button>

                <button id="approvebtn" type="button" onclick="return Getreqdata()" class="btn btn-success"><i class="fa fa-check"></i>Approve</button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->
<!-- Row -->
<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">

                <!-- Filters Form -->
                @{
                    var statuses = new[]
                    {
                        new { Value = 99, Text = "All" },
                        new { Value = 0, Text = "Pending" },
                        new { Value = 1, Text = "Approve" },
                        new { Value = 6, Text = "Deleted" }

                    };
                }
                @{
                    var parenttype = new[]
                    {
                        new { Value = "All", Text = "All" },
                        new { Value = "Project", Text = "Project" },
                        new { Value = "Personal Advance", Text = "Personal Advance" },
                        new { Value = "Opportunity", Text = "Opportunity" }
                   };
                }

                <form action="/Access/AdvanceReq_List" method="get" class="row g-3 align-items-end">

                    <!-- Status -->
                    <div class="col-12 col-md-2">
                        <label for="Sts" class="form-label">Select Status</label>
                        <select id="Sts" name="Sts" class="form-control select2">
                            @foreach (var status in statuses)
                            {
                                <option value="@status.Value" @(ViewBag.Sts == status.Value ? "selected" : "")>@status.Text</option>
                            }
                        </select>
                    </div>

                    <!-- Employee Type -->
                    <div class="col-12 col-md-3">
                        <label for="Userid" class="form-label">Select Employee </label>
                        <select id="Userid" name="Userid" class="form-control select2">
                            <option value="99" @(ViewBag.Userid == 99 ? "selected" : "")>All</option>
                            @foreach (UserMaster u in user)
                            {
                                <option value="@u.User_ID" @(ViewBag.Userid == u.User_ID ? "selected" : "")>@u.User_Name (@u.EmployeeID)</option>
                            }
                        </select>
                    </div>

                    <!-- Salary Group -->
                    <div class="col-12 col-md-3">
                        <label for="parenttype" class="form-label">Select Parent Type</label>

                        <select id="parenttype" name="parenttype" class="form-control select2">
                            @foreach (var ptype in parenttype)
                            {
                                <option value="@ptype.Value" @(ViewBag.parenttype == ptype.Value ? "selected" : "")>@ptype.Text</option>
                            }
                        </select>

                    </div>



                    <!-- Search / Download / Clear Buttons -->
                    <div class="col-12 col-md-3 d-flex gap-2">
                        <button type="submit" name="actionType" value="search" class="btn btn-primary">Search</button> &nbsp;
                        <button type="submit" name="actionType" value="download" class="btn btn-primary">Download</button> &nbsp;
                        <a href="/Access/AdvanceReq_List" class="btn btn-danger">Clear</a>
                    </div>

                </form>


                <div class="row g-3 align-items-end mt-3">
                    <!-- Upload Employees Form -->
                    @using (Ajax.BeginForm("UploadRequest", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUploadUser" }, new { @class = "d-flex align-items-end", style = "gap: 0.75rem;", @enctype = "multipart/form-data" }))
                    {
                        <div class="col-auto d-flex align-items-end">
                            <div class="input-group file-browser">
                                <input type="text" class="form-control border-right-0 browse-file" placeholder="Browse File" readonly>
                                <label class="input-group-append mb-0">
                                    <span class="btn btn-info">
                                        Browse <input type="file" class="file-browserinput" name="file" id="file" style="display: none;" multiple>
                                    </span>
                                </label>
                            </div>
                        </div>

                        <div class="col-auto">
                            <button type="submit" class="btn btn-info">Upload Request</button>
                        </div>
                    }
                </div>



                <br /><br />

                <div class="table-responsive">

                    <table class="table table-striped table-bordered border-bottom table-hover" id="basic-datatable">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="border-bottom-0">Pay To</th>
                                <th class="border-bottom-0">Project Name/ <br>Opp Name</th>
                                <th class="border-bottom-0">Date</th>
                                <th class="border-bottom-0">Expense Requested <br> Amount</th>
                                <th class="border-bottom-0">Expense Granted<br> Amount</th>
                                <th class="border-bottom-0">Status</th>
                                <th class="border-bottom-0">Operation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Req != null)
                            {
                                foreach (Request_Master p in Req)
                                {
                                    <tr>

                                        <td><input type="checkbox" id="checkAll_@p.Req_Id" name="reqchk" value="@p.Req_Id" /></td>
                                        <td style="text-transform: capitalize">@p.UserMaster.User_Name</td>
                                        @if (p.Project_Id != null)
                                        {
                                            <td style="text-transform: capitalize">@p.Project_Master.Project_Name</td>

                                        }
                                        else
                                        {
                                            <td style="text-transform: capitalize">@p.Parent_Type</td>
                                        }
                                        <td>@p.S_Date.ToString("dd-MM-yyyy") To @p.E_Date.ToString("dd-MM-yyyy")</td>
                                        <td style="text-transform: capitalize">@p.Requested_Amount</td>
                                        <td style="text-transform: capitalize">@p.Granted_Amount</td>
                                        <td>
                                            @*@util._Status_ByNumber(p.Status)*@
                                            @if (p.Status == 0)
                                            {
                                                <span class="badge badge-secondary-light">@util._Status_ByNumber(p.Status)</span>
                                            }
                                            else if (p.Status == 1)
                                            {
                                                <span class="badge badge-success">@util._Status_ByNumber(p.Status)</span>
                                            }
                                            else if (p.Status == 2)
                                            {
                                                <span class="badge badge-danger-light">@util._Status_ByNumber(p.Status)</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-primary-light">@util._Status_ByNumber(p.Status)</span>
                                            }
                                        </td>
                                        @if (p.Status != 1)
                                        {
                                            if (p.Project_Id != null)
                                            {
                                                string Project_Name = p.Project_Master.Project_Name;
                                                <td>
                                                    @using (Ajax.BeginForm("AdvanceReq_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminAdvReq" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                                    {
                                                        <input type="hidden" name="request_id" id="request_id" value="@p.Req_Id" />
                                                        @*<button class="btn btn-icon  btn-primary" onclick="return Add_AdvanceReq(@p.Req_Id,'@p.Place',@p.User_Id,'@p.Parent_Type',@p.Project_Id,'@util.GetTextStringScript(p.Remark)','@util.GetTextStringScript(p.Remark_For_Admin)','@util.GetTextStringScript(p.Description)',@p.Granted_Amount,@p.Requested_Amount,'@p.S_Date.ToString("dd MMMM yyyy")','@p.E_Date.ToString("dd MMMM yyyy")','@Project_Name',@p.Status)" type="submit"><strong><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></strong></button>*@
                                                        <button class="btn btn-icon  btn-primary" onclick="return Add_AdvanceReq(@p.Req_Id,'@p.Place',@p.User_Id,'@p.Parent_Type',@p.Project_Id,'@p.Remark','@p.Remark_For_Admin','@p.Description',@p.Granted_Amount,@p.Requested_Amount,'@p.S_Date.ToString("dd MMMM yyyy")','@p.E_Date.ToString("dd MMMM yyyy")','',@p.Status)" type="submit"><strong><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></strong></button>

                                                        <Button type="submit" id="delete_AdvanceReq" name="Command" value="Delete" class="btn btn-danger btn-icon" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash"></i></Button>
                                                    }

                                                </td>

                                            }
                                            else
                                            {

                                                <td>
                                                    @using (Ajax.BeginForm("AdvanceReq_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminAdvReq" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                                    {
                                                        <input type="hidden" name="request_id" id="request_id" value="@p.Req_Id" />
                                                        <button class="btn btn-icon  btn-primary" onclick="return Add_AdvanceReq(@p.Req_Id,'@p.Place',@p.User_Id,'@p.Parent_Type',0,'@p.Remark','@p.Remark_For_Admin','@p.Description',@p.Granted_Amount,@p.Requested_Amount,'@p.S_Date.ToString("dd MMMM yyyy")','@p.E_Date.ToString("dd MMMM yyyy")','',@p.Status)" type="submit"><strong><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></strong></button>
                                                        <Button type="submit" id="delete_AdvanceReq" name="Command" value="Delete" class="btn btn-danger btn-icon" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                                    }

                                                </td>
                                            }
                                        }
                                        else
                                        {
                                            if (p.Project_Id != null)
                                            {
                                                string Project_Name = p.Project_Master.Project_Name;
                                                <td>
                                                    <a data-toggle="tooltip" data-placement="top" title="view" onclick="return Add_AdvanceReq(@p.Req_Id,'@p.Place',@p.User_Id,'@p.Parent_Type',@p.Project_Id,'@p.Remark','@p.Remark_For_Admin','@p.Description',@p.Granted_Amount,@p.Requested_Amount,'@p.S_Date.ToString("dd MMMM yyyy")','@p.E_Date.ToString("dd MMMM yyyy")','',@p.Status)" type="submit"><strong><i class="fa fa-eye fa-2x text-primary"></i></strong></a>

                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <a data-toggle="tooltip" data-placement="top" title="view" onclick="return Add_AdvanceReq(@p.Req_Id,'@p.Place',@p.User_Id,'@p.Parent_Type',0,'@p.Remark','@p.Remark_For_Admin','@p.Description',@p.Granted_Amount,@p.Requested_Amount,'@p.S_Date.ToString("dd MMMM yyyy")','@p.E_Date.ToString("dd MMMM yyyy")','',@p.Status)" type="submit"><strong><i class="fa fa-eye fa-2x text-primary"></i></strong></a>
                                                </td>
                                            }
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row-->
<!-------------------Add City------------------------------------------->
<div class="modal fade" id="Model_Add_AdvanceReq" tabindex="-1" role="dialog" aria-hidden="true">
    @using (Ajax.BeginForm("AdvanceReq_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminAdvReq" }, new { @id = "form", @enctype = "multipart/form-data", @role = "form", @onsubmit = "return submitadvreq();" }))
    {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Advance Request Creation</h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Req_Id" id="Req_Id" value="0">
                    <div class="row">
                        <div class="col-lg-6">
                            <label class="form-label">Employee Name <span class="text-red">*</span></label>
                            <select name="User_Id" id="User_Id" class="form-control select2-show-search custom-select" required>
                                <option value="">Select Employee</option>
                                @foreach (UserMaster _u in user)
                                {
                                    <option value=@_u.User_ID>@_u.User_Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-lg-6">
                            <label class="form-label">Parent Type <span class="text-red">*</span></label>
                            <select onchange="getparent()" name="Parent_Type" id="Parent_Type" class="form-control select2-show-search custom-select" required>
                                <option value="">Select below option</option>
                                <option value="Project">Project</option>
                                <option value="Opportunity">Opportunity</option>
                                <option value="Personal Advance">Personal Advance</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-6" id="demo">
                            <label class="form-label">Project Name</label>
                            <input type="hidden" id="Project_Id_Js" />
                            <input type="hidden" id="Project_Name" />
                            <select class="form-control select2-show-search custom-select" name="Project_Id" id="Project_Id">
                                <option value="">Select Project</option>
                                @foreach (var group in projects)
                                {
                                    <option value="@group.Project_Id">@group.Project_Name</option>
                                }

                            </select>
                        </div>
                        <div class="col-lg-6">
                            <label class="form-label">Visiting Company <span class="text-red">*</span></label>
                            <input type="text" name="Place" required id="Place" style="margin:auto;" class="form-control" placeholder="Enter place">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-6">
                            <label class="form-label">From Date <span class="text-red">*</span></label>
                            <input type="text" name="S_Date" required id="S_Date" class="form-control fc-datepicker" placeholder="01 January 2001" />
                        </div>
                        <div class="col-lg-6">
                            <label class="form-label">To Date <span class="text-red">*</span></label>
                            <input type="text" name="E_Date" required id="E_Date" class="form-control fc-datepicker" placeholder="01 January 2001" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-6">
                            <label class="form-label">Expense Request Amount <span class="text-red">*</span></label>
                            <input type="number" min="1" name="Requested_Amount" required style="margin:auto;" id="Requested_Amount" class="form-control" />
                        </div>
                        <div class="col-lg-6">
                            <label class="form-label">Expense Granted Amount <span class="text-red">*</span></label>
                            <input type="number" min="1" name="Granted_Amount" required id="Granted_Amount" class="form-control" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-6">
                            <label class="form-label">Purpose to Visit <span class="text-red">*</span></label>
                            <textarea name="Description" class="form-control" id="Description" rows="1" cols="10" required placeholder="Puropse of visit"></textarea>
                        </div>
                        <div class="col-lg-6">
                            <label class="form-label">Remark for Administrator</label>
                            <textarea name="Remark" class="form-control" rows="1" cols="10" id="Remark" placeholder="Remark for administrator"></textarea>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-12">
                            <label class="form-label">Remark By Administrator</label>
                            <textarea name="Remark_For_Admin" class="form-control" rows="1" cols="10" id="Remark_For_Admin" placeholder="Remark by administrator"></textarea>
                        </div>
                    </div>
                </div>


                <br />
                <div class="card-footer text-right">
                    <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                    <button type="submit" id="savechange" name="Command" value="Save" class="btn btn-info"><i class="fa fa-save"></i>&ensp;Save</button>
                    <button type="submit" id="approvebtn" name="Command" value="Approve" class="btn btn-success"><i class="fa fa-check"></i>&ensp;Approve</button>
                    <button type="submit" id="rejectbtn" name="Command" value="Rejected" class="btn btn-danger"><i class="fa fa-remove"></i>&ensp;Rejected</button>
                    <button type="submit" id="deletebtn" name="Command" value="Delete" class="btn btn-danger"><i class="feather feather-trash"></i>&ensp;Delete</button>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    function getparent() {
        var Parent_Type = document.getElementById('Parent_Type').value;
        //if (Parent_Type == "Opportunity") {
        //    document.getElementById("demo").hidden = true;
        //}
        //else {
        //    document.getElementById("demo").hidden = false;
        //}
        if (Parent_Type == "Opportunity") {
            document.getElementById("Project_Id").disabled = true;
            document.getElementById("Place").disabled = false;
            document.getElementById("S_Date").disabled = false;
            document.getElementById("E_Date").disabled = false;
        }
        else if (Parent_Type == "Personal Advance") {
            document.getElementById("Project_Id").disabled = true;
            document.getElementById("Place").disabled = true;
            document.getElementById("S_Date").disabled = true;
            document.getElementById("E_Date").disabled = true;
        }
        else {
            document.getElementById("Project_Id").disabled = false;
            document.getElementById("Place").disabled = false;
            document.getElementById("S_Date").disabled = false;
            document.getElementById("E_Date").disabled = false;
        }
    }
    function getProject() {
        var Project_Name_js = document.getElementById("Project_Name").value;
        var Project_Id_Js = document.getElementById("Project_Id_Js").value;
        var User_Id = document.getElementById("User_Id").value;


    }
    var isSubmitted = false;

    function stopMultipleSubmitAdvReq() {
        if (!isSubmitted) {
            $("#savechange").prop('disabled', true);
            isSubmitted = true;
            return true;
        }
        else {
            $("#savebtn").prop('disabled', false);
            isSubmitted = false;
            return false;
        }
    }
    function submitadvreq() {
        //    var Address_Value = $("#Address_address").val();
        //if (Address_Value == "") {
        //}
        //    else {
        stopMultipleSubmitAdvReq();
        /*}*/

        return isSubmitted;
    }

    function Getreqdata() {

        let myList = [];
        let checkboxes = document.getElementsByName('reqchk');
        let result = "";
        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked) {
                /*result += checkboxes[i].value + ",";*/
                myList.push(checkboxes[i].value);

            }
        }


        $.ajax({

            url: '/Access/Getreqres',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(myList),
            success: function (data) {
                alert(data.msg);
                location.reload();
            },

            error: function (errormessage) {

            }
        });
    }
</script>
