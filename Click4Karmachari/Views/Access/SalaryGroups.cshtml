@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    UserMaster _LogedUser = ViewBag._LogedUser;
    CommonClasses util = new CommonClasses();
    ViewBag.Title = "Project Masters";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<ProjectSalaryGroup> project_Head_Masters = ViewBag.project_Head_Masters;

}
<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">All Salary Groups</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button class="btn btn-primary mr-3" onclick="return Add_ProjectHeadMaster(0,'','')" type="submit"><strong><i class="feather feather-plus fs-15 my-auto mr-2"></i>Add Salary Group</strong></button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->
<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Address</th>
                                <th>Operation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (project_Head_Masters != null)
                            {
                                foreach (ProjectSalaryGroup _newobj in project_Head_Masters)
                                {
                                    <tr>
                                        <td style="text-transform: capitalize">@_newobj.Project_Name</td>
                                        <td style="text-transform: capitalize">@_newobj.Project_Address</td>
                                        <td>
                                            <div style="display: flex; gap: 5px; align-items: center;">
                                                @using (Ajax.BeginForm("SalaryGroups_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateHead" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                                {
                                                    <input type="hidden" name="Project_MasterID" id="delProject_MasterID" value="@_newobj.Project_SalaryGroupID" />

                                                    <button class="btn btn-icon btn-primary"
                                                            onclick="return Add_ProjectHeadMaster(@_newobj.Project_SalaryGroupID,'@_newobj.Project_Name','@_newobj.Project_Address')"
                                                            type="submit"
                                                            data-toggle="tooltip"
                                                            data-original-title="Edit">
                                                        <i class="feather feather-edit"></i>
                                                    </button>

                                                    <button type="submit"
                                                            name="Command"
                                                            value="Delete"
                                                            class="btn btn-danger btn-icon"
                                                            onclick="return confirm('Are you sure you want to Delete?')"
                                                            data-toggle="tooltip"
                                                            data-original-title="Delete">
                                                        <i class="feather feather-trash-2"></i>
                                                    </button>
                                                }

                                            </div>
                                        </td>

                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-------------------Add Head------------------------------------------->
<div class="modal fade" id="Model_Add_ProjectMaster" tabindex="-1" role="dialog" aria-hidden="true">

    @using (Ajax.BeginForm("SalaryGroups_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateProjectMaster" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
    {
        <div class="modal-dialog">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="model_header">Add Head </h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="hidden" name="Command" id="Command" value="">
                                <input type="hidden" name="Project_MasterID" id="Project_MasterID" value="0" />
                                <label class="form-label">Project Name <span class="text-red">*</span></label>
                                <input type="text" placeholder="Enter Project Name" name="Project_Name" id="Project_Name" class="form-control" required autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                 <label class="form-label">Project Address <span class="text-red">*</span></label>
                                <input type="text" placeholder="Enter Project Address" name="Project_Address" id="Project_Address" class="form-control" required autocomplete="off" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer modal-new-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                    <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save</button>
                </div>
            </div>

        </div>
    }
</div>


