@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    UserMaster _LogedUser = ViewBag._LogedUser;
    CommonClasses util = new CommonClasses();
    ViewBag.Title = "Designation_List";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<Designation_Master> desg = ViewBag.desg;
}
<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">All Designation</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button class="btn btn-primary mr-3" onclick="return Add_Designation(0,'')" type="submit"><strong><i class="feather feather-plus fs-15 my-auto mr-2"></i>Add Designation</strong></button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->

<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>Designation Name</th>
                                <th>Operation</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (desg != null)
                            {
                                foreach (Designation_Master _newobj in desg)
                                {
                                    <tr>

                                        <td style="text-transform: capitalize">@_newobj.Designation</td>
                                        <td>
                                            @using (Ajax.BeginForm("Designation_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateDesignation" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                            {
                                                <button class="btn btn-icon btn-primary" onclick="return Add_Designation(@_newobj.Desg_Id,'@_newobj.Designation')" type="submit"><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></button>
                                                <input type="hidden" name="desg_id" id="desg_id" value="@_newobj.Desg_Id" />
                                                <Button type="submit" id="deleteDesignation" name="Command" value="Delete" data-toggle="tooltip" data-original-title="Delete" class="btn btn-danger btn-icon" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                            }

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
            <!-------------------Add Designation------------------------------------------->
<div class="modal fade" id="Model_Add_Designation" tabindex="-1" role="dialog" aria-hidden="true">
    @using (Ajax.BeginForm("Designation_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateDesignation" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
    {
        <div class="modal-dialog">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Designation </h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Add_Desg_Id" id="Add_Desg_Id" value="0" />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Designation Name <span class="text-red">*</span></label>
                                <input type="text" placeholder="Enter Designation Name" name="Add_Designation" id="Add_Designation" class="form-control" required autocomplete="off"/>
                            </div>
                        </div>
                    </div>
                </div>
                        <div class="modal-footer modal-new-footer">
                            <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                            <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save</button>
                            <button type="submit" id="deletebtn" name="Command" value="Delete" class="btn btn-danger"><i class="feather feather-trash"></i>&ensp;Delete</button>
                        </div>
                    </div>
                </div>
    }
    </div>
          
