@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    ViewBag.Title = "NoticeBoard_list";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    UserMaster _LogedUser = ViewBag._LogedUser;
    CommonClasses util = new CommonClasses();
    DateTime Date = Convert.ToDateTime(DateTime.Now);
    string str2 = Date.ToString("dd MMMM yyyy");
    List<NoticeBoard_Master> n = ViewBag.notice;
}

<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">All Notice List</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button class="btn btn-primary mr-3" onclick="return Add_Notice(0,'','@str2','')" type="submit"><strong><i class="feather feather-plus fs-15 my-auto mr-2"></i>Add Notice Board</strong></button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>Title </th>
                                <th>Description </th>
                                <th>Date </th>
                                <th>Operation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (n != null)
                            {
                                foreach (NoticeBoard_Master _newobj in n)
                                {
                                    <tr>
                                        <td style="text-transform: capitalize">@_newobj.Title</td>
                                        <td style="text-transform: capitalize">@_newobj.Description</td>
                                        <td style="text-transform: capitalize">@_newobj.Date.Value.ToString("dd MMMM yyyy")</td>
                                        <td>
                                            @using (Ajax.BeginForm("NoticeBoard_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminNotice" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                            {
                                                <button class="btn btn-icon btn-primary" onclick="return Add_Notice(@_newobj.Notice_Id,'@_newobj.Title','@_newobj.Date.Value.ToString("dd MMMM yyyy")','@_newobj.Description')" type="submit"><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></button>
                                                <input type="hidden" name="Notice_Id" id="Notice_Id" value="@_newobj.Notice_Id" />
                                                <Button type="submit" id="deleteNotice" name="Command" value="Delete" class="btn btn-danger btn-icon" data-toggle="tooltip" data-original-title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                            }
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="Model_Add_Notice" tabindex="-1" role="dialog" aria-hidden="true">

    @using (Ajax.BeginForm("NoticeBoard_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminNotice" }, new { @id = "form", @enctype = "multipart/form-data", @role = "form" }))
    {
        <div class="modal-dialog">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Notice </h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Add_Notice_Id" id="Add_Notice_Id" value="0" />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Title <span class="text-red">*</span></label>
                                <input type="text" name="Title" id="Title" class="form-control" placeholder="Enter Title" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Date </label>
                                <input type="text" class="form-control fc-datepicker" name="Date" id="Date" data-single-mode="true" value="@str2" placeholder="01 January 2001" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Description <span class="text-red">*</span> </label>
                                <textarea name="Description" id="Description" class="form-control" rows="1" cols="10" required placeholder="Enter Description"></textarea>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="modal-footer modal-new-footer      ">
                        <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                        <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
