@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    UserMaster _LogedUser = ViewBag._LogedUser;
    CommonClasses util = new CommonClasses();
    ViewBag.Title = "AssetType_List";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<Asset_type> Asset = ViewBag.asset;
}
<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">All Assets Type</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button class="btn btn-primary mr-3" onclick="return Add_AssetType(0,'')" type="submit"><strong><i class="feather feather-plus fs-15 my-auto mr-2"></i>Add AssetType</strong></button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->
<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>Asset Type</th>
                                <th>Operation</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Asset != null)
                            {
                                foreach (Asset_type _newobj in Asset)
                                {
                                    <tr>

                                        <td style="text-transform: capitalize">@_newobj.Name</td>
                                        <td class="asset-btn">
                                            @using (Ajax.BeginForm("AssetType_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateUserAt" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                            {
                                                <button onclick="return Add_AssetType(@_newobj.Type_id,'@_newobj.Name')" type="submit" class="btn btn-icon btn-primary"><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></button>
                                                <input type="hidden" name="ass_type_id" id="ass_type_id" value="@_newobj.Type_id" />
                                                <Button type="submit" id="deleteAssetType" class="btn btn-danger btn-icon" name="Command" value="Delete" data-toggle="tooltip" data-original-title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                            }

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-------------------Add Assset------------------------------------------->
<div class="modal fade" id="Model_AddAssetType" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">

        @*<div class="col-md-12 p-0 card-left" style="margin-left:100px; margin-bottom: 25px;display:none;" id="msgdig">
            <div class="alert_R" style="margin-right: 260px; margin-right: 260px; border-radius: 30px;">
                <span id="failuremsg"></span>
                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            </div>
        </div>*@
        @using (Ajax.BeginForm("AssetType_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateUserAt" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add AssetType </h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Add_AssetType_Type_id" id="Add_AssetType_Type_id" value="0" />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Asset Type Name <span class="text-red">*</span></label>
                                <input type="text" name="Add_AssetType_Name" placeholder="Enter AssetType Name" id="Add_AssetType_Name" class="form-control" required autocomplete="off" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer modal-new-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                    <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save </button>
                    <button type="submit" id="deletebtn" name="Command" value="Delete" class="btn btn-danger"><i class="feather feather-trash"></i>&ensp;Delete</button>
                </div>
            </div>


        }
    </div>
</div>  
