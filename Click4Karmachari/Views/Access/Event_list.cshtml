@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    UserMaster _LogedUser = ViewBag._LogedUser;
    CommonClasses util = new CommonClasses();
    ViewBag.Title = "Event_list";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<Event_Master> eve = ViewBag.Event;
    List<UserMaster> user = ViewBag.user;
    DateTime Date = Convert.ToDateTime(DateTime.Now);
    string str1 = Date.ToString("dd MMMM yyyy");
    List<UserMaster> alluaer = ViewBag.em;
}

<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">All Events</h4>
    </div>

    <div class="page-rightheader ml-md-auto">
        <div class="d-flex align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="d-flex">
               
            </div>
            <div class="d-lg-flex">
                <div class="btn-list">
                    <button class="btn btn-primary mr-3" onclick="return Add_Event(0,'','@str1','','')" type="submit"><strong><i class="feather feather-plus fs-15 my-auto mr-2"></i>Add Event</strong></button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-lg-4">
        <div class="card">
            <div class="card-header border-bottom-0">
                <h4 class="card-title">Upcoming Birthdays</h4>
            </div>
            <div class="card-body mt-2">
                @foreach (UserMaster _newobj in alluaer.Take(5))
                {
                    <div class="mb-5">
                        <div class="d-flex comming_holidays calendar-icon icons">
                            <span class="date_time bg-purple-transparent bradius mr-5">

                                <span class="date fs-20">@_newobj.DOB.ToString("dd")</span>
                                <span class="month fs-13">@_newobj.DOB.ToString("MMMM")</span>

                            </span>
                            <div class="mr-3 mt-0 mt-sm-2 d-block">
                                <h6 class="mb-1 font-weight-semibold">@_newobj.User_Name</h6>
                                <span class="clearfix"></span>
                                <small>Birthday</small>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <div class="col-md-12 col-lg-8">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title">Event List</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable2" class="table  table-striped table-vcenter text-nowrap table-bordered border-bottom">

                        <thead>
                            <tr>
                                <th>Title </th>
                                <th>Employee Name</th>
                                <th>Date </th>
                                <th>Operation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (eve != null)
                            {
                                foreach (Event_Master _newobj in eve)
                                {

                                    <tr>

                                        <td style="text-transform: capitalize">@_newobj.Title</td>
                                        <td style="text-transform: capitalize">@_newobj.UserMaster.User_Name</td>
                                        <td style="text-transform: capitalize">@_newobj.Date.Value.ToString("dd MMMM yyyy")</td>
                                        <td>
                                            @using (Ajax.BeginForm("Event_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminEvent" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                            {
                                                <button class="btn btn-icon btn-primary" onclick="return Add_Event(@_newobj.Event_Id,'@_newobj.Title','@_newobj.Date.Value.ToString("dd MMMM yyyy")','@_newobj.Description','@_newobj.User_id')" type="submit"><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></button>
                                                <input type="hidden" name="Event_Id" id="Event_Id" value="@_newobj.Event_Id" />
                                                <Button type="submit" id="deleteEvent" name="Command" value="Delete" class="btn btn-danger btn-icon" data-toggle="tooltip" data-original-title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                            }
                                        </td>
                                    </tr>

                                }
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="Model_Add_Event" tabindex="-1" role="dialog" aria-hidden="true">

    @using (Ajax.BeginForm("Event_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminEvent" }, new { @id = "form", @enctype = "multipart/form-data", @role = "form" }))
    {
        <div class="modal-dialog">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Event </h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Add_Event_ID" id="Add_Event_ID" value="0" />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Title <span class="text-red">*</span></label>
                                <input type="text" name="Title" id="Title" class="form-control" placeholder="Enter Title" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Employee <span class="text-red">*</span></label>
                                <select name="User_id" id="User_id" class="form-control select2-show-search custom-select"  data-placeholder="Select Employee" required>
                                    <option value="">Select Employee</option>
                                    @foreach (UserMaster _c in user)
                                    {
                                        <option value=@_c.User_ID>@_c.User_Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Description <span class="text-red">*</span></label>
                                <textarea name="Description" id="Description" class="form-control" rows="1" cols="10" required placeholder="Enter Description"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Date <span class="text-red">*</span></label>
                                <input type="text" class="form-control fc-datepicker" name="Date" id="Date" data-single-mode="true" placeholder="01 January 2001" required />
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="modal-footer modal-new-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                        <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<script src="~/AdminTemplate/assets/js/employee/emp-attendance.js"></script>
<script src="~/AdminTemplate/assets/js/employee/emp-sidemenuchart.js"></script>