@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    UserMaster _LogedUser = ViewBag._LogedUser;
    //CommonClasses util = new CommonClasses();
    ViewBag.Title = "Shift_List";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<Shift_Master> Shift = ViewBag.Shift;
    //DateTime Date = Convert.ToDateTime(DateTime.Now);
    //string str1 = Date.ToString("yyyy-MM-dd");
}


<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">All Shift</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button class="btn btn-primary mr-3" onclick="return Add_Shift(0,'','','')" type="submit"><strong><i class="feather feather-plus fs-15 my-auto mr-2"></i>Add Shift</strong></button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->
<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>Shift_Name</th>
                                <th>Shift From</th>
                                <th>Shift To</th>
                                <th>Operation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Shift != null)
                            {
                                foreach (Shift_Master _newobj in Shift)
                                {
                                    <tr>
                                        <td style="text-transform: capitalize">@_newobj.Shift_Name</td>
                                        <td>@_newobj.Shift_From</td>
                                        <td>@_newobj.Shift_To</td>
                                        <td>
                                            @using (Ajax.BeginForm("Shift_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateShift" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                            {
                                                <button class="btn btn-icon btn-primary" onclick="return Add_Shift(@_newobj.Shift_Id,'@_newobj.Shift_Name','@_newobj.Shift_From','@_newobj.Shift_To')" type="submit"><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></button>
                                                <input type="hidden" name="shift_id" id="shift_id" value="@_newobj.Shift_Id" />
                                                <Button type="submit" id="deleteShift" name="Command" value="Delete" class="btn btn-danger btn-icon"  data-toggle="tooltip" data-original-title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                            }

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-------------------Add Shift------------------------------------------->
<div class="modal fade" id="Model_Add_Shift" tabindex="-1" role="dialog" aria-hidden="true">
    @using (Ajax.BeginForm("Shift_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateShift" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
    {
        <div class="modal-dialog">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Shift </h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Shift_Id" id="Shift_Id" value="0" />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Shift Name <span class="text-red">*</span></label>
                                <input type="text" name="Shift_Name" id="Shift_Name" class="form-control" placeholder="Enter Shift" required autocomplete="off">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Shift Start Time <span class="text-red">*</span></label>
                                 <input type="time" name="Shift_From" id="Shift_From" class="form-control" data-single-mode="true" placeholder="Enter Time" required />
                              
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Shift End Time <span class="text-red">*</span></label>
                                <input type="time" name="Shift_To" id="Shift_To" class="form-control" data-single-mode="true" placeholder="Enter Time" required />
                               
                            </div>
                        </div>
                        </div>
                    </div>
                        <div class="modal-footer modal-new-footer">
                            <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                            <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-primary"><i class="feather feather-save"></i>&ensp;Save</button>
                            <button type="submit" id="deletebtn" name="Command" value="Delete" class="btn btn-danger"><i class="feather feather-trash"></i>&ensp;Delete</button>
                        </div>

                    </div>
                </div>
    }
    </div>
