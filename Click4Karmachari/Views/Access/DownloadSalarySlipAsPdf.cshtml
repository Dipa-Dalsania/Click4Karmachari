@using ClickKarmachari;
@using ClickKarmachari.Models;
@{
    SalarySlipDetail_Result Model = ViewBag.salary;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Salary Slip</title>
    <style>
        body {
            font-family: Arial;
            margin: 40px;
        }

        .salary-slip {
            border: 1px solid #000;
            padding: 20px;
            width: 700px;
            margin: auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 5px;
        }

        .info-table, .salary-table {
            width: 100%;
            margin-bottom: 20px;
            border-collapse: collapse;
        }

            .info-table td {
                padding: 4px 8px;
            }

            .salary-table th, .salary-table td {
                border: 1px solid #000;
                padding: 6px;
                text-align: left;
            }

            .salary-table th {
                background-color: #f0f0f0;
            }

        .footer {
            text-align: center;
            font-size: 12px;
            margin-top: 20px;
        }

        .totals {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div id="content">
        <div class="salary-slip">
            <h2>SALARY SLIP FOR THE MONTH OF @Model.SalaryMonth.ToString("MMMM-yyyy")</h2>

            <table class="info-table">
                <tr>
                    <td><strong>Name:</strong> @Model.User_Name</td>
                    <td><strong>Days in Month:</strong> @Model.WorkingDays</td>
                </tr>
                <tr>
                    <td><strong>Department:</strong> @Model.Department</td>
                    <td><strong>Days Present:</strong> @Model.NoOfDays</td>
                </tr>
                <tr>
                    <td><strong>Employee ID:</strong> @Model.EmployeeID</td>
                    <td><strong>Mobile No:</strong> @Model.User_Mobile</td>
                </tr>
            </table>

            <table class="salary-table">
                <thead>
                    <tr>
                        <th>Earnings</th>
                        <th>Amount</th>
                        <th>Deductions</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>

                    <tr><td>Basic</td><td>@Model.BASIC</td><td>PF</td><td>@Model.PF</td></tr>
                    <tr><td>HRA</td><td>@Model.HRA</td><td>PT</td><td>@Model.PT</td></tr>
                    <tr><td>DA</td><td>@Model.DA</td><td>ESIC</td><td>@Model.ESIC</td></tr>
                    <tr><td>TA</td><td>@Model.TA</td><td>HRA Deduct</td><td>@Model.HRA_DEDUCT</td></tr>
                    <tr><td>Bonus</td><td>@Model.BONUS</td><td>Travel Deduct</td><td>@Model.TRAVEL</td></tr>
                    <tr><td>PH</td><td>@Model.PH</td><td>Advance</td><td>@Model.ADVANCE</td></tr>
                    <tr><td>OT</td><td>@Model.OTPAYMENT</td><td>Welfare</td><td>@Model.Welfare</td></tr>
                    <tr><td>Leave</td><td>@Model.LEAVE</td><td>Uniform</td><td>@Model.Uniform</td></tr>
                    <tr><td>Special Allowance</td><td>@Model.SPECIALALLOWANCE</td><td>Other</td><td>@Model.Other</td></tr>
                    <tr class="totals">
                        <td>Total Gross Earning</td>
                        <td>@Model.GROSS_INCOME</td>
                        <td>Total Deduction</td>
                        <td>@Model.GROSS_DEDUCTION</td>
                    </tr>
                    <tr class="totals">
                        <td colspan="2">Net Payable Monthly</td>
                        <td colspan="2">@Model.NET_INCOME</td>
                    </tr>
                </tbody>
            </table>

            <div class="footer">
                This is an auto generated salary slip<br />
                <strong>@Model.Company_Name</strong><br />
                @Model.Company_Address
            </div>
        </div>
    </div>
</body>
</html>




