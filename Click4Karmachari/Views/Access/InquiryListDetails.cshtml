                        placeholder: {
                            id: '-1', // the value of the option
                            text: 'Please Select a Employee'
                        }
                    });
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }

            });



    }
    function Add_inquiry(Inquiry_Id, Inquiry_Name, Mobile_no, Email_Id, Services, Previous_meeting, Next_meeting, Description, Lead_Status, Assign_To) {

        $('#Inquiry_Id').val(Inquiry_Id);
        $('#Inquiry_Name').val(Inquiry_Name);
        $('#Mobile_no').val(Mobile_no);
        $('#Email_Id').val(Email_Id);
        $('#Services').val(Services);
        $('#Previous_meeting').val(Previous_meeting);
        $('#Next_meeting').val(Next_meeting);
        $('#Description').val(Description);
        $('#Emp_Id').val(Assign_To);
        $('#Lead_Status').val(Lead_Status);

        $('#Model_Add_Project').modal('show');
        if (Inquiry_Id == 0) {
            $('#deletebtn').hide();
        } else {
            $('#deletebtn').show();
        }
        return false;
    }





</script>

