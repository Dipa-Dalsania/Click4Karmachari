@using ClickKarmachari;
@{
    ViewBag.Title = "Inquiry Details";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<Inquiry_Master> inqdetail = ViewBag.InquiryDetails;

}

<link href="~/Content/animation.css" rel="stylesheet" />

<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">Inquiry List</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="d-flex align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button id="addanim" class="btn btn-primary" onclick="return Add_inquiry(0,'','','','','','')" type="submit"><i class="feather feather-plus fs-15 my-auto mr-2"></i><strong>Add Inquiry</strong></button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->
<!-- Row -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Moile NO</th>
                                <th>Email_Id </th>
                                <th>Services</th>
                                @*<th>Previous Metting </th>
                                    <th>next meeting</th>*@
                                <th>Description</th>
                                <th>operation</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (inqdetail != null)
                            {
                                foreach (Inquiry_Master _newobj in inqdetail)
                                {
                                    <tr>
                                        <td style="text-transform: capitalize">@_newobj.Inquiry_Name</td>
                                        <td style="text-transform: capitalize">@_newobj.Mobile_no</td>
                                        <td style="text-transform: capitalize">@_newobj.Email_Id</td>
                                        <td style="text-transform: capitalize">@_newobj.Services</td>
                                        <td style="text-transform: capitalize">@_newobj.Description</td>
                                        @*<td style="text-transform: capitalize">@_newobj.Previous_meeting.ToString("dd MMMM yyyy")</td>
                                            <td style="text-transform: capitalize">@_newobj.Next_meeting.ToString("dd MMMM yyyy")</td>*@
                                        <td>
                                            <div class="pull-left space-15">

                                                @using (Ajax.BeginForm("Inquiry_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminProject" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                                {
                                                    <input type="hidden" name="InqEdit" id="InqEdit" value="" />
                                                    <button class="btn btn-icon btn-primary" onclick="return Add_inquiry(@_newobj.Inquiry_Id,'@_newobj.Inquiry_Name',@_newobj.Mobile_no,'@_newobj.Email_Id','@_newobj.Services','@_newobj.Previous_meeting','@_newobj.Next_meeting','@_newobj.Description',@_newobj.Lead_Status,@_newobj.Assign_To)"><strong><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></strong></button>
                                                }
                                            </div>
                                            <div class="pull-right">
                                                @using (Ajax.BeginForm("Inquiry_delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminProject" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
                                                {
                                                    <input type="hidden" name="inqID" id="inqID" value="@_newobj.Inquiry_Id" />

                                                    <Button type="submit" id="Delpro" name="Command" value="Delete" class="btn btn-danger btn-icon" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;> <i class="feather feather-trash-2"></i></Button>

                                                }
                                            </div>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row-->
<!-------------------Add Proejct------------------------------------------->
<div class="modal fade" id="Model_Add_Project" tabindex="-1" role="dialog" aria-hidden="true">
    @using (Ajax.BeginForm("Inquiry_Add", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateAdminInquiry" }, new { @id = "form", @enctype = "multipart/form-data", role = "form" }))
    {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Inquiry</h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">

                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Inquiry_Id" id="Inquiry_Id" value="0" />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Inquiry Name <span class="text-red">*</span></label>
                                <input type="text" name="Inquiry_Name" id="Inquiry_Name" placeholder="Enter Inquiry Name" class="form-control" required autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Mobile No.<span class="text-red">*</span></label>
                                <input type="text" name="Mobile_no" id="Mobile_no" placeholder="Enter Mobile Number" class="form-control" required autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Email ID<span class="text-red">*</span></label>
                                <input type="text" name="Email_Id" id="Email_Id" placeholder="Enter Your Email" class="form-control" required autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Services<span class="text-red">*</span></label>
                                <input type="text" name="Services" id="Services" placeholder="Enter Services" class="form-control" required autocomplete="off" />
                            </div>
                        </div>
                        @*<div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-label">Previous Meeting<span class="text-red">*</span></label>
                                    <input type="text" name="Previous_meeting" id="Previous_meeting" placeholder="Enter Previous Meeting Date" class="form-control fc fc-datepicker" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-label">Next Meeting<span class="text-red">*</span></label>
                                    <input type="text" name="Next_meeting" id="Next_meeting" placeholder="Enter Next Meeting Date" class="form-control fc fc-datepicker" required autocomplete="off" />
                                </div>
                            </div>*@
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Assign To<span class="text-red">*</span></label>
                                <select name="Emp_Id" id="Emp_Id" class="form-control select1" data-placeholder="Select Employee" required>
                                    <option value="0" selected disabled>Select Employee </option>
                                </select>
                            </div>
                        </div>
                        @*<div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-label">Lead Status<span class="text-red">*</span></label>
                                    <select id="Lead_Status" name="Lead_Status" class="form-control" required>
                                        <option value="-1" disabled >Select Status</option>
                                        <option value="0">Successfull</option>
                                        <option value="1">Cancelled</option>
                                        <option value="6">Delete</option>
                                    </select>
                                </div>
                            </div>*@
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-label">Description<span class="text-red">*</span></label>
                                <input type="text" name="Description" id="Description" placeholder="Enter Description" class="form-control" required autocomplete="off" />
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                    <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save changes</button>
                    <button type="submit" id="deletebtn" name="Command" value="Delete" class="btn btn-danger"><i class="feather feather-trash"></i>&ensp;Delete</button>
                </div>
            </div>

        </div>
    }
</div>

