@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    UserMaster _LogedUser = ViewBag._LogedUser;
    CommonClasses util = new CommonClasses();
    ViewBag.Title = "View_Emp_Leave_Transaction";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<UserMaster> user = ViewBag.user;
    List<Leave_Master> leave = ViewBag._Leave;
    UserMaster _u = ViewBag.u;
}

<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">Leave Transaction</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
               
            </div>
        </div>
    </div>
</div>
<!--End Page header-->
<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                @if (_u != null)
                {
                    <h6 class="card-title atten-text">Leave Transaction Summary of <label class="btn btn-primary btn-mini d-lg-none d-xl-inline">@_u.User_Name</label></h6>
                }
                else
                {
                    <h6 class="card-title"></h6>
                }
            </div>
            <div class="card-body">
                @using (Html.BeginForm("View_Emp_Leave_Transaction", "Access", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-lg-4">
                        <div class="form-group" style="margin-bottom:0px !important;">
                            <label class="form-label">Employee Name <span class="text-red">*</span></label>
                            <select name="Emp_Id" id="Emp_Id" class="form-control select2-show-search custom-select" data-placeholder="Select Employee" required>


                                @foreach (UserMaster u in user)
                                {
                                    if (ViewBag.user_id == u.User_ID)
                                    {
                                        <option selected value="@ViewBag.user_id">@ViewBag.u_name</option>
                                    }
                                    else
                                    {
                                        <option value="@u.User_ID">@u.User_Name</option>
                                    }
                                }

                            </select>
                        </div>
                    </div>
                    <br/>
                    <div class="col-lg-12">
                        <div>
                            <button class="btn btn-primary" type="submit"><strong>Submit</strong></button>
                        </div>
                    </div>
                    <br />
                }


                @if (_u != null)
                {
                    <hr style="visibility:hidden"/>
                    <div class="table-responsive">
                        <table id="basic-datatable" class="table table-striped table-bordered border-bottom table-hover">
                            <thead>
                                <tr>
                                    <th>PL</th>
                                    <th>CL</th>
                                    <th>EL</th>
                                    <th>Leave</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@_u.Total_PL</td>
                                    <td>@_u.Total_CL</td>
                                    <td>@_u.Total_EL</td>
                                    <td>@_u.Total_Leave</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }

                <br/>

                @if (leave != null)
                {
                    <hr style="visibility:hidden"/>
                    <div class="table-responsive">
                        <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                            <thead>
                                <tr>
                                    <th>Added By</th>
                                    <th>Leave Type</th>
                                    <th>Leave Days</th>
                                    <th>From Date</th>
                                    <th>To Date</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Leave_Master _l in leave.Where(x => x.Status == 1).ToList())
                                {
                                    <tr>
                                        <td>@_l.UserMaster1.User_Name</td>
                                        <td>@_l.Leave_Type</td>
                                        @if (_l.Leave_Crdr == 1)
                                        {
                                            <td><span style="color:green">+</span>@_l.leave_days</td>
                                        }
                                        @if (_l.Leave_Crdr == 2)
                                        {
                                            <td><span style="color:red">-</span>@_l.leave_days</td>
                                        }
                                        <td>@_l.From_Date.ToString("dd MMMM yyyy")</td>
                                        <td>@_l.To_Date.ToString("dd MMMM yyyy")</td>
                                        <td>@_l.Reason</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


