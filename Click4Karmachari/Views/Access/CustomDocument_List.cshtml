@using ClickKarmachari.Models;
@using ClickKarmachari;
@{
    UserMaster _LogedUser = ViewBag._LogedUser;
    CommonClasses util = new CommonClasses();
    ViewBag.Title = "CustomDocument_List";
    Layout = "~/Views/Access/Access_Layout.cshtml";
    List<Custom_Document> c = ViewBag.c;
}
<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">All Custom Document</h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <a href="~/Access/CustomDocument_Add?Cust_Id=0" class="btn btn-primary mr-3"><strong><i class="feather feather-plus fs-15 my-auto mr-2"></i>Add CustomDocument</strong></a>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->
<div class="row">
    <div class="col-xl-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatable1" class="table table-striped table-bordered border-bottom table-hover">
                        <thead>
                            <tr>
                                <th>CustomDocument Name</th>
                                <th>Description</th>
                                <th>Operation</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (c != null)
                            {
                                foreach (Custom_Document _newobj in c)
                                {
                                    <tr>

                                        <td style="text-transform:capitalize">@_newobj.Doc_Name</td>
                                        <td>@Html.Raw(_newobj.Doc_Disc)</td>
                                        <td>
                                            @using (Ajax.BeginForm("CustomDocument_Delete", "Access", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateCustomDocument" }, new { @id = "form", @enctype = "multipart/form-data", @style = "display:flex;", @role = "form" }))
                                            {
                                                <input type="hidden" name="cust_id" id="cust_id" value="@_newobj.Cust_Id" />
                                                <a style="margin-right:3px;" href="~/Access/CustomDocument_Add?Cust_Id=@_newobj.Cust_Id" class="btn btn-icon btn-primary"><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></a>
                                                <Button type="submit" id="deleteCustomDocument" name="Command" value="Delete" class="btn btn-danger btn-icon" data-toggle="tooltip" data-original-title="Delete" onclick="return confirm('Are you sure you want to Delete?')" ;><i class="feather feather-trash-2"></i></Button>
                                            }

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
          