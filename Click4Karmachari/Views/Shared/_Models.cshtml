

<div id="modaldemo" class="modal fade effect-scale">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content bd-0 rounded-0">
            <div class="modal-body pd-0">

                <div class="row">
                    <div id="content" class="col-sm-12">
                        <div class="page-login">
                            <div class="account-border">
                                <div class="row">
                                    @using (Ajax.BeginForm("Login", "Home", new AjaxOptions { HttpMethod = "POST", OnBegin = "return validateModelLoginForm()", OnSuccess = "OnLoginSuccess" }, new { @id = "AjaxformId", @class = "form-horizontal", @enctype = "multipart/form-data", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="col-sm-6 customer-login">
                                            <div class="well">
                                                <h2><i class="fa fa-file-text-o" aria-hidden="true"></i> Returning Customer</h2>
                                                <p><strong>I am a returning customer</strong></p>
                                                <div class="form-group">
                                                    <label class="control-label " for="input-email">Mobile Number</label>
                                                    <input type="text" name="umobile" pattern="[6789][0-9]{9}"  value=""  autocomplete="on" required="required" placeholder="Your Mobile Number" id="modellogin-mobile" class="form-control" />
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label " for="input-password">Password</label>
                                                    <input type="password" name="password" value=""  autocomplete="on" required="required" placeholder="Your Password" id="modellogin-password" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="bottom-form">
                                                <a href="~/Home/fgpassword" class="forgot">Forgot Your Password ?</a>
                                                <input type="submit" value="Login" class="btn btn-default pull-right" />
                                            </div>
                                        </div>
                                    }
                                    <div class="col-sm-6 new-customer">
                                        <div class="well">
                                            <h2><i class="fa fa-file-o" aria-hidden="true"></i> New Customer</h2>
                                            <p>By creating an account you will be able to shop faster, be up to date on an order's status, and keep track of the orders you have previously made.</p>
                                        </div>
                                        <div class="bottom-form">
                                            <a href="~/Home/register" class="btn btn-default pull-right">Continue</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div id="addNewAddress" class="modal fade effect-scale">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content bd-0 rounded-0">
            <div class="modal-body pd-0">
                <div class="row flex-row-reverse no-gutters">
                    <div class="col-lg-12">
                        <div class="pd-30">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            @using (Html.BeginForm("AddAddress", "Home", FormMethod.Post, new { id = "submitForm" }))
                            {
                                <div class="pd-xs-x-30 pd-y-10">
                                    <h5 class="tx-xs-28 tx-inverse mg-b-5">Add New Address!</h5>
                                    <br>
                                    <div class="form-group">
                                        <input type="hidden" name="frompage" id="frompage" value="profile">
                                        <input type="hidden" name="addressid" id="addressid" value="0">
                                        <input type="text" name="Addline1" id="Addline1" class="form-control pd-y-12" placeholder="Address Line 1" required>
                                    </div><!-- form-group -->
                                    <div class="form-group mg-b-20">
                                        <input type="text" name="Addline2" id="Addline2" class="form-control pd-y-12" placeholder="Address Line 2">
                                    </div>
                                    <div class="form-group mg-b-20">
                                        <input type="text" name="Addline3" id="Addline3" class="form-control pd-y-12" placeholder="Address Line 3">
                                    </div>
                                    <div class="form-group mg-b-20">
                                        <input type="number" name="pincode" id="pincode" maxlength="6" min="6" class="form-control pd-y-12" placeholder="Pincode" required>
                                    </div>
                                    <div class="form-group mg-b-20">
                                        <select class="form-control select2" name="ucity" data-placeholder="Choose City">
                                            <option value="Bharuch">Bharuch</option>
                                        </select>
                                    </div>
                                    <div class="form-layout-footer">
                                        <input type="submit" value="Save" id="btnAdd" name="Command" class="btn btn-primary" data-loading-text="Loading...">
                                        <input type="submit" value="Update" id="btnUpdate" name="Command" class="btn btn-primary" data-loading-text="Loading...">
                                        <input type="button" value="Cancel" id="btncancel" onclick="return AddressCancel()" class="btn btn-primary" data-loading-text="Loading...">
                                    </div><!-- form-layout-footer -->
                                </div>
                            }
                        </div><!-- pd-20 -->
                    </div><!-- col-6 -->
                    <!-- col-6 -->
                </div><!-- row -->
            </div><!-- modal-body -->
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div>

<div id="ErrorMsg" class="modal fade effect-scale">
    <div class="modal-dialog" role="document">
        <div class="modal-content bd-0 rounded-0">
            <div class="modal-body pd-0">
                <div class="row">
                    <div id="content" class="col-sm-12">
                        <div class="page-login">
                            <div class="account-border">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="bottom-form">
                                            <center>
                                                @if (ViewBag.Result != null)
                                                {
                                                    string _msg = ViewBag.Result.ToString();
                                                    if (_msg.Contains("^"))
                                                    {
                                                        if (_msg.Split('^')[0].ToString() == "Success")
                                                        {
                                                            <h2><b>Woow !! </b> @_msg.Split('^')[1].ToString()</h2>
                                                        }
                                                        else
                                                        {
                                                            <h2><b>Sorry !! </b> @_msg.Split('^')[1].ToString()</h2>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <h2>@Html.Raw(ViewBag.Result)</h2>
                                                    }


                                                }
                                            </center>
                                            <center>
                                                <button type="submit" data-dismiss="modal" class="btn btn-default">&nbsp;&nbsp;&nbsp;OK &nbsp;&nbsp;&nbsp;&nbsp;</button>
                                            </center>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

