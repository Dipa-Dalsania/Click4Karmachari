@using ClickKarmachari;
@using ClickKarmachari.Models;
@{
    ViewBag.Title = "AdvanceReq_List";
    Layout = "~/Views/Employee/Employee_Layout_new.cshtml";
    List<Request_Master> Req = ViewBag.req;
    CommonClasses util = new CommonClasses();
    List<UserMaster> user = ViewBag.user;
    List<Project_Master> projects = ViewBag.Project;
    DateTime Date = Convert.ToDateTime(DateTime.Now);
    string str1 = Date.ToString("dd MMMM yyyy");
    List<long> pid = new List<long>();
    string remark = "", adminremark = "", desc = "";
}


<!--Page header-->
<div class="page-header d-xl-flex d-block">
    <div class="page-leftheader">
        <h4 class="page-title">
            All Advance Request
        </h4>
    </div>
    <div class="page-rightheader ml-md-auto">
        <div class="align-items-end flex-wrap my-auto right-content breadcrumb-right">
            <div class="btn-list">
                <button class="btn btn-primary" onclick="return Emp_AdvanceReq(0,'','','','','','',0,0,'@str1','@str1','')" type="submit"><i class="feather feather-plus fs-15 my-auto mr-2"></i><strong>Add Request</strong></button>
            </div>
        </div>
    </div>
</div>
<!--End Page header-->


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header  border-0">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered border-bottom table-hover" id="basic-datatable">
                        <thead>
                            <tr>
                                <th class="border-bottom-0">Pay To </th>
                                <th class="border-bottom-0">Project Name/ <br>Opp Name</th>
                                <th class="border-bottom-0">Expense Requested <br> Amount </th>
                                <th class="border-bottom-0">Expense Granted<br> Amount</th>
                                <th class="border-bottom-0">Status</th>
                                <th class="border-bottom-0">Operation</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Req != null)
                            {
                                foreach (Request_Master p in Req)
                                {
                                    remark = util.GetTextStringScript(p.Remark);
                                    adminremark = util.GetTextStringScript(p.Remark_For_Admin);
                                    desc = util.GetTextStringScript(p.Description);
                                    <tr>
                                        <td style="text-transform:capitalize">@p.UserMaster.User_Name</td>
                                        @if (p.Project_Id != null)
                                        {
                                            <td style="text-transform:capitalize">@p.Project_Master.Project_Name</td>

                                        }
                                        else
                                        {
                                            <td style="text-transform: capitalize">@p.Parent_Type</td>
                                        }
                                        <td style="text-transform: capitalize">@p.Requested_Amount</td>
                                        <td style="text-transform: capitalize">@p.Granted_Amount</td>
                                        <td>
                                         
                                            @if (p.Status == 0)
                                            {
                                                <span class="badge badge-secondary-light">@util._Status_ByNumber(p.Status)</span>
                                            }
                                            else if (p.Status == 1)
                                            {
                                                <span class="badge badge-success">@util._Status_ByNumber(p.Status)</span>
                                            }
                                            else if (p.Status == 2)
                                            {
                                                <span class="badge badge-danger-light">@util._Status_ByNumber(p.Status)</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-primary-light">@util._Status_ByNumber(p.Status)</span>
                                            }

                                        </td>
                                        @if (p.Status != 1)
                                        {
                                            if (p.Project_Id != null)
                                            {
                                                string Project_Name = p.Project_Master.Project_Name;
                                                <td>
                                                    <button class="btn btn-icon btn-primary" onclick="return Emp_AdvanceReq(@p.Req_Id,'@p.Place','@p.Parent_Type',@p.Project_Id,'@util.GetTextStringScript(p.Remark)','@util.GetTextStringScript(p.Remark_For_Admin)','@util.GetTextStringScript(p.Description)',@p.Granted_Amount,@p.Requested_Amount,'@p.S_Date.ToString("dd MMMM yyyy")','@p.E_Date.ToString("dd MMMM yyyy")','@Project_Name')" type="submit"><strong><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></strong></button>
                                                </td>

                                            }
                                            else
                                            {
                                                <td>
                                                    <button class="btn btn-icon btn-primary" onclick="return Emp_AdvanceReq(@p.Req_Id,'@p.Place','@p.Parent_Type',0,'@util.GetTextStringScript(p.Remark)','@util.GetTextStringScript(p.Remark_For_Admin)','@util.GetTextStringScript(p.Description)',@p.Granted_Amount,@p.Requested_Amount,'@p.S_Date.ToString("dd MMMM yyyy")','@p.E_Date.ToString("dd MMMM yyyy")','')" type="submit"><strong><i class="feather feather-edit" data-toggle="tooltip" data-original-title="View/Edit"></i></strong></button>
                                                </td>
                                            }
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<!-------------------Add Request------------------------------------------->
<div class="modal fade" id="Model_Emp_AdvanceReq" tabindex="-1" role="dialog" aria-hidden="true">

    @using (Ajax.BeginForm("AdvanceReq_Add", "Employee", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnUpdateUserEAdvReq" }, new { @id = "form", @enctype = "multipart/form-data", @role = "form", @onsubmit = "return submitadvreq();" }))
    {
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Advance Request Creation</h5>
                <button class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Req_Id" id="Req_Id" value="0">
                <div class="row">
                    <div class="col-lg-6">
                        <label class="form-label">Parent Type <span class="text-red">*</span></label>
                        <select onchange="getparent()" name="Parent_Type" id="Parent_Type" class="form-control select2-show-search custom-select" required>
                            <option value="">Select below option</option>
                            <option value="Project">Project</option>
                            <option value="Opportunity">Opportunity</option>
                            <option value="Personal Advance">Personal Advance</option>
                        </select>
                    </div>
                    <div class="col-lg-6" id="demo">
                        <label class="form-label">Project Name</label>
                        <select name="Project_Id" id="Project_Id" class="form-control select2-show-search custom-select">
                            <option value="">Select Project</option>
                            @foreach (Project_Master _u in projects)
                            {
                                <option value=@_u.Project_Id>@_u.Project_Name</option>
                            }
                        </select>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <label class="form-label">From Date</label>
                        <input type="text" name="S_Date" required id="S_Date" class="form-control fc-datepicker" placeholder="01 January 2022" />
                    </div>
                    <div class="col-lg-6">
                        <label class="form-label">To Date</label>
                        <input type="text" name="E_Date" required id="E_Date" class="form-control fc-datepicker" placeholder="01 January 2022" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <label class="form-label">Visiting Company <span class="text-red">*</span></label>
                        <input type="text" name="Place" required id="Place" style="margin:auto;" class="form-control" placeholder="Enter place">
                    </div>
                    <div class="col-lg-6">
                        <label class="form-label">Expense Req Amount <span class="text-red">*</span></label>
                        <input type="number" name="Requested_Amount" min="1" required style="margin:auto;" id="Requested_Amount" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <label class="form-label">Purpose to Visit <span class="text-red">*</span></label>
                        <textarea name="Description" class="form-control" id="Description" rows="1" cols="10" placeholder="Purpose of Visit" required></textarea>
                    </div>
                    <div class="col-lg-6">
                        <label class="form-label">Remark for Administrator</label>
                        <textarea name="Remark" class="form-control" rows="1" cols="10" placeholder="Remark for adminisrtator" id="Remark"></textarea>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <label class="form-label">Remark By Administrator</label>
                        <textarea name="Remark_For_Admin" class="form-control" rows="1" cols="10" id="Remark_For_Admin" placeholder="Remark by administrator"></textarea>
                    </div>
                </div>

            </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal"><i class="fa fa-close"></i>&ensp;<b style="color:#222222">Close</b></button>
                    <button type="submit" id="savebtn" name="Command" value="Save" class="btn btn-info"><i class="feather feather-save"></i>&ensp;Save</button>
                    <button type="submit" id="deletebtn" name="Command" value="Delete" class="btn btn-danger"><i class="feather feather-trash"></i>&ensp;Delete</button>
                </div>
            </div>
    </div>
            }
    </div>
<script type="text/javascript">
    function getparent() {
        var Parent_Type = document.getElementById('Parent_Type').value;
        //if (Parent_Type == "Opportunity") {
        //    document.getElementById("demo").hidden = true;
        //}
        //else {
        //    document.getElementById("demo").hidden = false;
        //}
        if (Parent_Type == "Opportunity") {
            document.getElementById("Project_Id").disabled = true;
            document.getElementById("Place").disabled = false;
            document.getElementById("S_Date").disabled = false;
            document.getElementById("E_Date").disabled = false;
        }
        else if (Parent_Type == "Personal Advance") {
            document.getElementById("Project_Id").disabled = true;
            document.getElementById("Place").disabled = true;
            document.getElementById("S_Date").disabled = true;
            document.getElementById("E_Date").disabled = true;
        }
        else {
            document.getElementById("Project_Id").disabled = false;
            document.getElementById("Place").disabled = false;
            document.getElementById("S_Date").disabled = false;
            document.getElementById("E_Date").disabled = false;
        }
    }
    var isSubmitted = false;

    function stopMultipleSubmitAdvReq() {
        if (!isSubmitted) {
            $("#savebtn").prop('disabled', true);
            isSubmitted = true;
            return true;
        }
        else {
            $("#savebtn").prop('disabled', false);
            isSubmitted = false;
            return false;
        }
    }
    function submitadvreq() {
     
        stopMultipleSubmitAdvReq();
 
        return isSubmitted;
    }
</script>


